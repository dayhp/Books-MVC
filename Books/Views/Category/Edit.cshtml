@model Category


<div class="container mt-5">
    <form method="post">
        <div class="row">
            <input  hidden asp-for="Id"/>
            <div class="col-md-8 offset-md-2">
                <h2>Update Category</h2>
                <hr />

                <div class="mb-3">
                    <label for="categoryName" class="form-label">Category Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter category name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Display Order</label>
                    <input class="form-control" asp-for="DisplayOrder" placeholder="Enter display order" required />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-floppy"></i> Save
                    </button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-backspace"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </form>

</div>